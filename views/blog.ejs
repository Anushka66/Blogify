<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs") %>
    <title>Blog | DarkRooms</title>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>
    
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="700px"/>
        <pre class="mt-3"><%= blog.body %></pre>
    </div>
    <% if(locals.user){ %>
        <% if(user._id===blog.createdBy._id){ %>
            <a href="/blog/delete/<%= blog._id %>" class="btn btn-danger">Delete</a>
            <% } %>
        <% } %>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImage %>" width="50px" border-radius> <%= blog.createdBy.name %>
    </div>

    <div class="container mt-3">
        <h1>Comments(<%= comments.length %>)</h1>
        <% if(locals.user){ %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <input type="text" name="content" class="form-control" placeholder="Enter your comment"/>
                <button type="submit" class="btn btn-sm btn-primary">Add</button>
            </form>
            <% } %>
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                    <div>
                        <img src="<%= comment.createdBy.profileImage %>" width="30px" class="img-fluid rounded-circle"><b><%= comment.createdBy.name %></b>
                        <pre><%= comment.content %></pre>
                    </div>
                <%}); %>
            </div>
    </div>

    <%- include('./partials/scripts.ejs') %>
</body>
</html>