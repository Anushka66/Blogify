<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs") %>
    <title>Home | DarkRooms</title>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>
 
    <div class="container mt-3">
        <div class="row row-cols-4 g-3">
          <% blogs.forEach(element => { %>
            <div class="col" >
              <div class="card" style="width: 18rem;">
                <img src="<%= element.coverImageURL %>" class="card-img-top" width="300px" height="300px">
                <div class="card-body">
                  <h5 class="card-title"><%= element.title%></h5>
                  <a href="/blog/<%= element._id %>" class="btn btn-primary">View</a>
                </div>
              </div>
            </div>
        <% }); %>
        </div>
    </div>

    <%- include('./partials/scripts.ejs') %>
</body>
</html>